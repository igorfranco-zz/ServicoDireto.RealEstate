@using SpongeSolutions.ServicoDireto.Model;
@model ElementCultureExtended
@{
    ViewBag.Title = "Culture";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}
<div class="span-7">
    <img src="@String.Concat(SpongeSolutions.ServicoDireto.Admin.SiteContext.LayoutPath, this.Model.IconPath)" title="@this.Model.CultureName" alt="@this.Model.CultureName"/>&nbsp;@Html.Label(this.Model.CultureName):<br />
    @Html.Hidden(String.Format("ElementCulture[{0}].IDCulture", (string)Convert.ToString(this.ViewBag.Index)), this.Model.IDCulture)
    @Html.LabelFor(model => model.Name)<br/>
    @Html.TextBox(String.Format("ElementCulture[{0}].Name", (string)Convert.ToString(this.ViewBag.Index)), this.Model.Name, new { maxlength=300, @class="xbig"})<br/>
    @Html.ValidationMessage(String.Format("ElementCulture[{0}].Name", (string)Convert.ToString(this.ViewBag.Index)))        
    @Html.LabelFor(model => model.Description)<br/>
    @Html.TextArea(String.Format("ElementCulture[{0}].Description", (string)Convert.ToString(this.ViewBag.Index)), this.Model.Description, new { maxlength = 1000, @class = "xbig" })<br/>    
</div>
