@using SpongeSolutions.ServicoDireto.Model;
@model AttributeCultureExtended
@{
    ViewBag.Title = "Culture";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}
<div class="span-6">
    <img src="@String.Concat(SpongeSolutions.ServicoDireto.Admin.SiteContext.LayoutPath, this.Model.IconPath)" title="@this.Model.CultureName" alt="@this.Model.CultureName"/>&nbsp;@Html.Label(this.Model.CultureName):<br />
    @Html.LabelFor(model => model.Name)<br/>
    @Html.TextBox(String.Format("attributeCulture[{0}].Name", (string)Convert.ToString(this.ViewBag.Index)), this.Model.Name)<br/>
    @Html.ValidationMessage(String.Format("[{0}].Name", (string)Convert.ToString(this.ViewBag.Index)))
        
    @Html.LabelFor(model => model.Value)<br/>
    @Html.TextBox(String.Format("attributeCulture[{0}].Value", (string)Convert.ToString(this.ViewBag.Index)), this.Model.Value)<br/>
    @Html.Hidden(String.Format("attributeCulture[{0}].IDCulture", (string)Convert.ToString(this.ViewBag.Index)), this.Model.IDCulture)
</div>
